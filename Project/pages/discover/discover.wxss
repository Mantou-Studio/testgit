page{
  background: #f2f2f2;
}
.swiper{
  width: 100vm;
  height: 250px;
  overflow: hidden;
  border-bottom-left-radius: 50px;
  border-bottom-right-radius: 50px;
}
.swiper_image{
  width: 100%;
  height: 250px;
}
.view_tools,.view_campusLife,.view_study{
  width: 94%;
  height: auto;
  margin-left: 3%;
  border-radius: 10px;
  position: relative;
  top: -40px;
  overflow: hidden;
  box-shadow: 0 3px 10px #4b4b4b;
  background-color: #fff;
}
.view_tools_title{
  width: 97%;
  height: 30px;
  padding-left: 3%;
  line-height: 30px;
  font-size: 20px;
}
.view_horizontal{
  width: 94%;
  height: 80px;
  padding-left: 3%;
  padding-right: 3%;
  padding-top: 10px;
  white-space: nowrap;
}
::-webkit-scrollbar{ 
  /* // 隐藏滚动条 */
    width: 0;
    height: 0;
    color: transparent;
}
.view_box{
  width: 50px;
  height: 70px;
  margin-right: 10px;
  display: inline-block;
}
.view_image{
  width: 100%;
  height: 50px;
  border-radius: 10px;
  overflow: hidden;
  background-color: #f8cf1d;
}
.image_icon{
  width: 100%;
  height: 100%;
}
.view_text{
  width: 100%;
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.view_campusLife{
  position: relative;
  top: -30px;
}
.view_study{
  position: relative;
  top: -20px;
}