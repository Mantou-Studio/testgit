page{
  background-color: #f2f2f2;
}
.view_content{
  width: 94%;
  height: 200px;
  background-color: #fff;
  margin-left: 3%;
  margin-top: 15px;
  border-radius: 10px;
  overflow: hidden;
}
.view_box_info{
  width: 94%;
  height: 60px;
  padding-left:3% ;
  padding-right: 3%;
}
.view_headPortait{
  width: 40px;
  height: 40px;
  border-radius: 5px;
  position: relative;
  float: left;
  top:10px;
  background-color: #f2f2f2;
}
.view_info{
  width: 80%;
  height: 40px;
  float: left;
  position: relative;
  top: 10px;
  margin-left: 5px;
}
.view_name{
  width: 100%;
  height: 50%;
  line-height: 20px;
  font-size: 16px;
  font-weight: 800;
}
.view_time{
  width: 100%;
  height: 50%;
  line-height: 20px;
  font-size: 12px;
  color: #757575;
}
.view_box_content{
  width: 94%;
  height: 100px;
  padding-right: 3%;
  padding-left: 3%;
}
.view_box_money{
  width: 100%;
  height: 30px;
}
.view_box_image{
  width: 20px;
  height: 20px;
  background-color: #f2f2f2;
  border-radius: 3px;
  position: relative;
  top: 5px;
  float: left;
}
.view_box_type{
  width: 50%;
  height: 30px;
  line-height: 30px;
  float: left;
  position: relative;
  left: 10px;
  font-size: 14px;
}
.view_box_price{
  width: 40%;
  height: 100%;
  float: right;
  line-height: 30px;
  text-align: right;
  font-size: 12px;
  color: #f4ea2a;
}
.view_add_box{
  width: 100%;
  height: 50px;
  position: fixed;
  bottom: 0px;
}
.view_add_image{
  width: 90px;
  height: 40px;
  border-radius: 20px;
  background-color:#fff ;
  margin-left: 50%;
  transform: translateX(-50%);
  box-shadow: 0px 3px 10px #757575;
}
.view_add_child{
  width: 40px;
  height: 40px;
  margin-left: 50%;
  transform: translateX(-50%);
}