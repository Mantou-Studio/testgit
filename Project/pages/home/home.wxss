page{
  background: #f2f2f2;
  -webkit-overflow-scrolling : touch;
}
.swiper{
  width: 100vm;
  height: 250px;
  overflow: hidden;
  border-bottom-left-radius: 50px;
  border-bottom-right-radius: 50px;
}
.swiper_image{
  width: 100%;
  height: 250px;
}
.view_padding{
  width: 100vm;
  padding-left: 15px;
  padding-right: 15px;
  position: relative;
  top: -40px;
}
.view_pro{
  z-index: 100;
  width: 100vm;
  height: auto;
  position: absolute;
  transform: translateX(-50%);
  left: 50%;
}
.view_btnbox{
  width: 60px;
  height: 60px;
  position: fixed;
  bottom: 50px;
  right: 10px;
  border-radius: 50%;
  box-shadow: 0 0px 15px #f4ea2a;
}
.image_add{
  width:60px;
  height: 60px;
}
