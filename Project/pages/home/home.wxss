.view_listBox{
  width: 100%;
  height: auto;
  background-color: #FFF;
  border-radius: 20px;
  overflow: hidden;
  position: relative;
  margin-bottom: 10px;
}
.view_title{
  width: 100%;
  height: 60px;
}
.view_headPortrait{
  width: 44px;
  height: 44px;
  margin-left: 3%;
  position: relative;
  top: 8px;
  border-radius: 5px;
  background-color: #f2f2f2;
  float: left;
  overflow: hidden;
}
.headPortrait{
  width: 100%;
  height:100%
}
.view_titleContent{
  width: 70%;
  height: 40px;
  float: left;
  position: relative;
  top: 10px;
  left: 10px;
}
.view_name{
  width: 80%;
  height: 20px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 16px;
  line-height: 20px;
  font-weight: 800;
}
.view_info{
  width: 100%;
  height: 20px;
  font-size: 12px;
  line-height: 20px;
  color: rgb(99, 98, 98);
}
.view_content{
  width: 100%;
  height: auto;
}
.view_text{
  width: 96%;
  height: auto;
  margin-left: 3%;
  margin-bottom: 10px;
  position: relative;
  text-overflow:ellipsis;
  word-wrap:break-word;
  white-space: pre-wrap;
}
.view_Image{
  width: 100%;
  height: auto;
}
.view_imageList{
  width: 29.3%;
  height: 120px;
  border-radius: 20px;
  margin-left: 3%;
  margin-bottom: 10px;
  display: inline-block;
  background-color: rgb(243, 243, 243);
}
.view_foot{
  width: 94%;
  height: 60px;
  border-top: 1px solid #dedede;
  margin-left: 3%;
  display: flex;
}
.view_iconList{
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
}
.image_praise,.image_discuss,.image_collect,.image_share{
  width: 30px;
  height: 30px;
}