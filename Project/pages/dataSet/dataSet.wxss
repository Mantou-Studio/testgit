page{
  background-color: #f2f2f2;
}
.view_content,.view_about_content,.view_save_content{
  width: 94%;
  height: auto;
  background-color: #fff;
  border-radius: 10px;
  margin-left: 3%;
  margin-top: 10px;
  overflow: hidden;
}
.view_save_content{
  height: 40px;
  line-height: 40px;
  text-align: center;
  color: #646464;
}
.view_name_box,.view_headPortait_box,.view_sex_box,.view_phone_box,.view_qq_box,.view_age_box,.view_authentication_box,.view_support_box,.view_about_box,.view_sign_box{
  width: 94%;
  height: 40px;
  margin-left: 3%;
  border-bottom: 2px solid #f2f2f2;
}
.view_sign_box{
  height: 80px;
}
.view_name_tab,.view_headPortait_tab,.view_sex_tab,.view_phone_tab,.view_qq_tab,.view_age_tab,.view_authentication_tab,.view_support_tab,.view_about_tab,.view_sign_tab{
  width: 47%;
  height: 100%; 
  float: left;
  line-height: 40px;
  padding-left: 3%;
}
.view_support_tab,.view_about_tab{
  width: 94%;
}
.view_sign_tab{
  width: 94%;
  height: 40px;
}
.view_name,.view_sex,.view_phone,.view_qq,.view_age,.view_authentication,.view_sign{
  width: 50%;
  height: 100%;
  float: left;
}
.view_sign,.text_sign{
  width: 96%;
  margin-left: 2%;
  height: 40px;
}
.input_name,.input_sex,.input_phone,.input_qq,.input_age,.input_authentication{
  width: 90%;
  height: 40px;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}
.view_headPortait_box{
  height: 80px; 
}
.view_headPortait_tab{
  line-height: 80px;
}
.view_headPortait{
  width: 60px;
  height: 60px;
  position: relative;
  top:10px;
  left: 25%;
  transform: translateX(-50%);
  float: left;
  border-radius: 50%;
  background-color: #f2f2f2;
  overflow: hidden;
}
.image_headPortait{
  width: 100%;
  height: 100%;
  position: absolute;
}
.image_camera{
  width: 50%;
  height: 50%;
  margin-top: 25%;
  margin-left: 25%; 
}
.view_sign_box,.view_about_box{
  border-bottom: 0px;
}