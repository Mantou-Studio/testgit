.view_box{
  width: 100vm;
  height: 100px;
  background: #FFF;
  border-radius: 20px;
  box-shadow: 0 3px 10px #585858;
  border: 1px solid #ececec;
  position: relative;
}
.view_horizontal{
  min-width: 100%;
  height: 60px; 
  position: absolute;
  top: 20px;
  white-space: nowrap;
}
.view_list{
  width: 60px;
  height: 60px;
  display: inline-block; 
  margin-left: 10px;
}
.view_icon{
  width: 40px;
  height: 40px;
  margin-left: 10px;
  border-radius: 5px;
}
.view_text{
  width: 60px;
  height: 20px;
  text-align: center;
  font-size: 13px;
  line-height: 20px;
  
}
.action{
  color:#1AAD19;
}
.image_icon{
  width: 40px;
  height: 40px;
}
::-webkit-scrollbar{ 
  /* // 隐藏滚动条 */
    width: 0;
    height: 0;
    color: transparent;
}
.view_content{
  width: 100vm;
  height: auto;
  margin-top: 10px;
}